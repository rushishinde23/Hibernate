<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="xmlMapping.Patient" table="patient">
        <id name="id" column="patient_id">
            <generator class="native"/>
        </id>
        <property name="name" column="patient_name" />
        <property name="city" column="patient_city" />
        <property name="age" column="patient_age" />
    </class>
</hibernate-mapping>